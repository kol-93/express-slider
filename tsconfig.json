{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "outDir": "distribution",
    "removeComments": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true
  },
  "include": [
    "source/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}